{% extends "::base.html.twig" %}

{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="{{ asset('bundles/jhekasoftregistration/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/jhekasoftregistration/css/bootstrap-theme.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/jhekasoftregistration/css/style.css') }}" />
    <!--[if lt IE 9]>
        <script src="{{ asset('bundles/jhekasoftregistration/js/respond.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/jhekasoftregistration/js/html5shiv.js') }}" type="text/javascript"></script>
    <![endif]-->
    <script src="{{ asset('bundles/jhekasoftregistration/js/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/jhekasoftregistration/js/bootstrap.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title 'Jhekasoft Registration' %}

{% block body %}
    <!-- Static navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('_registration_welcome') }}">Jhekasoft Registration</a>
            </div>
            <div class="navbar-collapse navbar-right">
                {% if app.user %}
                <div class="user-status">
                    <strong>{{ app.user ? app.user.username : 'Anonymous' }}</strong> (<a href="{{ path('_registration_logout') }}">logout</a>)
                </div>
                {% else %}
                    <a href="{{ path('_registration_login') }}">Login</a>
                {% endif %}
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </div>

    <div class="container body-container">
        {% block content %}{% endblock %}
    </div> <!-- /container -->
{% endblock %}
